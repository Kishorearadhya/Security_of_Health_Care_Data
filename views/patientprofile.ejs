  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }

    body {
      margin: 0;
      /* color: #292b2c; */
      overflow-x: hidden;
      position: relative;
    }

    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/images/BG.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      filter: brightness(80%);
      transform: scaleX(-1);
      /* Adjust the brightness for the faded look */
      z-index: -1;
    }
  </style>
</head>

<body>
  <!-- Navigation bar starts -->
  <div class="">
    <nav class="navbar navbar-expand-lg navbar-dark primary-bg primary-text fixed-top py-1 ">
      <a class="navbar navbar-brand font-weight-bold ml-5 mb-0 h5 text-uppercase" href="#"><i
          class="fas fa-user-secret mr-2"></i>File<span style="color: black;">Integrity</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mx-5">
          <li class="nav-item active">
            <a class="nav-link mr-1 font-weight-bold" href="/home"><i class="fas fa-home mr-1"></i>Home <span
                class="sr-only">(current)</span></a>
          </li>
          <% if(user.isDoctor){ %>
            <li class="nav-item ">
              <a class="nav-link mr-1 font-weight-bold" href="/patient"><i class="fa fa-upload mr-1"></i>Patients</a>
            </li>
            <% }else{ %>
              <li class="nav-item ">
                <a class="nav-link mr-1 font-weight-bold" href="/upload"><i class="fa fa-upload mr-1"></i>Upload</a>
              </li>
              <% } %>
                <li class="nav-item">
                  <a class="nav-link mr-1  font-weight-bold" href="/dashboard"><i
                      class="fas fa-tachometer-alt mr-1"></i>Dashboard</a>
                </li>
        </ul>
      </div>
    </nav>
  </div>
  <!-- navigation bar ends -->
  <!-- This is where our main page begins!!! -->
  <!-- <div class="container text-center">
    <div class="row"> -->
      <div class="col-lg-5 col-md-12 col-12 mx-4 my-4">
        <h2 class="">Patient Profile:</h2>
      </div>
    <!-- </div> -->

    <!-- <form action="/" method="POST"> -->
    <!-- <div class="row"> -->
      <div class="col-lg-7 col-md-12 col-12 mx-4">
        <div class="form-row">
          <div class="form-group col-md-5 font-weight-bold">
            <label for="inputAddress">Name</label>
            <input type="text" class="form-control" name="name" value="<%= patientprofile.name %>" readonly>
          </div>
          <div class="form-group col-md-4 font-weight-bold">
            <label for="inputPassword4">Mobile No</label>
            <input type="text" class="form-control" name="mobileNumber" value="<%= patientprofile.mobileNumber %>"
              readonly>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-9 font-weight-bold">
            <label for="inputPassword4">Email</label>
            <input class="form-control" type="text" name="email" value="<%= patientprofile.email %>" readonly>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-9 font-weight-bold">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" name="address1" value="<%= patientprofile.address.address1 %>"
              readonly>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-3 font-weight-bold">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" name="city" value="<%= patientprofile.address.city %>" readonly>
          </div>
          <div class="form-group col-md-3 font-weight-bold">
            <label for="inputState">State</label>
            <input type="text" class="form-control" name="state" value="<%= patientprofile.address.state %>" readonly>
          </div>
          <div class="form-group col-md-3 font-weight-bold">
            <label for="inputZip">Country</label>
            <input type="text" class="form-control" name="country" value="<%= patientprofile.address.country %>"
              readonly>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-9 font-weight-bold">
            <label for="exampleFormControlTextarea1">Description</label>
            <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"
              readonly><%= patientprofile.description %></textarea>
          </div>
        </div>
        <div class="col-md-9 text-center">
          <a class='btn btn-secondary bg-dark' href='/request/<%= patientprofile._id %>'>Request Files</a>
        </div>
      </div>
    <!-- </div>
  </div> -->
  <!-- </form> -->
  <!-- This is where our main page ends -->
  <% if(locals.msg){ %>
    <script>
      alert("<%= msg %>");
      if (window.location.search.includes('msg=')) {
        const urlWithoutMsg = window.location.origin + window.location.pathname;
        history.replaceState({}, document.title, urlWithoutMsg);
      }
    </script>
    <% } %>
</body>

</html>